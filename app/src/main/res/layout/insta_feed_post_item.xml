<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="23dp"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/owner_img"
            android:layout_width="60dp"
            android:src="@drawable/btn_outsta_my"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/owner_username"
            android:textSize="20dp"
            android:textColor="#1d1d1d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat> //owner 사진과 이름
    <ImageView
        android:id="@+id/post_img"
        android:layout_width="match_parent"
        android:layout_height="412dp"/>  //포스트 그림
    <TextView
        android:id="@+id/post_content"
        android:textSize="16dp"
        android:textColor="#1d1d1d"
        android:paddingTop="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>   //컨텐트 문자



</androidx.appcompat.widget.LinearLayoutCompat>